<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#482D28"
    tools:context=".QuizActivity">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="366dp"
        android:layout_height="212dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.521"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/bg" />

    <TextView
        android:id="@+id/question"
        android:layout_width="339dp"
        android:layout_height="47dp"
        android:layout_marginTop="24dp"
        android:text="How is the Neat Roots ?"
        android:textColor="@color/white"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="@+id/imageView3"
        app:layout_constraintHorizontal_bias="0.532"
        app:layout_constraintStart_toStartOf="@id/imageView3"
        app:layout_constraintTop_toBottomOf="@id/imageView3" />

    <Button
        android:id="@+id/option1"
        android:layout_width="200dp"
        android:layout_height="74dp"
        android:text="option1"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="@+id/question"
        app:layout_constraintStart_toStartOf="@+id/question"
        tools:layout_editor_absoluteY="318dp"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/option2"
        android:layout_width="204dp"
        android:layout_height="78dp"
        android:text="option2"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="@+id/option1"
        app:layout_constraintStart_toStartOf="@+id/option1"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="420dp" />

    <Button
        android:id="@+id/option3"
        android:layout_width="204dp"
        android:layout_height="76dp"
        android:text="option3"
        android:textSize="30dp"
        tools:layout_editor_absoluteX="104dp"
        tools:layout_editor_absoluteY="524dp"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/option4"
        android:layout_width="202dp"
        android:layout_height="75dp"
        android:text="option4"
        android:textSize="30dp"
        tools:layout_editor_absoluteX="104dp"
        tools:layout_editor_absoluteY="634dp"
        tools:ignore="MissingConstraints" />


</androidx.constraintlayout.widget.ConstraintLayout>